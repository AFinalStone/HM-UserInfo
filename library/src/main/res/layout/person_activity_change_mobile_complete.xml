<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.hm.iou.uikit.HMTopBarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uikit_topbar_height"
        app:titleText=""
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="变更手机号"
        android:textColor="#ff222222"
        android:textSize="@dimen/textFontSize_22" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_phone_black" />


        <com.hm.iou.uikit.ClearEditText
            style="@style/UikitEditText.InputMobile"
            android:id="@+id/et_phone"
            android:hint="输入新的手机号"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/person_ic_msg" />

        <com.hm.iou.uikit.ClearEditText
            style="@style/UikitEditText.CheckCode"
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            />

        <com.hm.iou.uikit.HMCountDownTextView
            style="@style/UikitButton.CheckCode"
            android:id="@+id/tv_getcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>


    <Button
        style="@style/UikitButton.Bottom"
        android:id="@+id/btn_finishChange"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:text="完成变更"
        android:textSize="@dimen/textFontSize_18" />

</LinearLayout>
