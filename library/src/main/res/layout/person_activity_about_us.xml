<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/uikit_background"
    android:fitsSystemWindows="false">


    <com.hm.iou.uikit.HMTopBarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uikit_topbar_height"
        app:titleBackground="#ffffff"
        app:titleText="关于我们" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_about_copyright"
        android:layout_below="@id/topbar"
        android:orientation="vertical">

        <com.hm.iou.uikit.ShapedImageView
            android:id="@+id/iv_logo"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="55dip"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            app:round_radius="8dip"
            app:shape_mode="round_rect" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dip"
            android:text="借条管家"
            android:textColor="#ff111111"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_about_version"
            android:layout_width="38dp"
            android:layout_height="17dp"
            android:layout_gravity="center_horizontal"
            android:text="1.0.0版"
            android:textColor="#ff636363"
            android:textSize="12sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"></android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_about_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dip"
        android:paddingTop="10dip"
        android:text="Copyright©2017-2018\n54jietiao.com 版权所有"
        android:textColor="#ff111111"
        android:textSize="10sp" />

</RelativeLayout>
