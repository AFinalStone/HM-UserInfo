<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.hm.iou.uikit.HMTopBarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uikit_topbar_height"
        app:backIcon="@mipmap/uikit_icon_close_black"
        app:bottomDividerIsShow="false"
        app:titleBackground="@color/transparent"
        app:titleText="关于我们" />


    <com.hm.iou.uikit.ShapedImageView
        android:id="@+id/iv_logo"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dip"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        app:round_radius="8dip"
        app:shape_mode="round_rect" />

    <TextView
        style="@style/UikitTextView.Normal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dip"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_about_version"
        style="@style/UikitTextView.Auxiliary.Small"
        android:layout_gravity="center_horizontal"
        android:text="1.0.0版" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_about"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dip"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_about_copyright"
        style="@style/UikitTextView.Auxiliary"
        android:gravity="center"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:text="Copyright©2019-2020\n54jietiao.com 版权所有"
        android:textSize="@dimen/textFontSize_9" />

</LinearLayout>
