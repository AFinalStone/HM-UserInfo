<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/HomeLeftMenuListItem">

    <TextView
        android:id="@+id/tv_menu_name"
        style="@style/HomeLeftMenuListTitle"
        tools:text="我的实名" />

    <TextView
        android:id="@+id/tv_menu_red_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_bg_home_left_menu_red_msg"
        android:gravity="center"
        android:minHeight="16dp"
        android:minWidth="32dp"
        android:text="认证"
        android:textColor="@color/white"
        android:textSize="@dimen/textFontSize_10"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_menu_desc"
        style="@style/HomeLeftMenuListHint"
        tools:text="菜单描述" />

    <ImageView
        android:id="@+id/iv_arrow"
        style="@style/HomeLeftMenuListArrow" />


</LinearLayout>