<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/uikit_background"
    android:fitsSystemWindows="false">


    <com.hm.iou.uikit.HMTopBarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uikit_topbar_height"
        app:titleBackground="#ffffdd4a"
        app:titleText="个人中心" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topbar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dip"
                android:background="@color/white"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/person_bg_personal_header_yellow" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dip"
                    android:background="@mipmap/person_bg_personal_header"
                    >
                    <com.hm.iou.uikit.ShapedImageView
                        android:id="@+id/iv_header"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="30dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/uikit_icon_header_unknow"
                        app:shape_mode="circle" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:layout_alignTop="@id/iv_header"
                        android:layout_alignBottom="@id/iv_header"
                        android:layout_toRightOf="@id/iv_header"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:id="@+id/tv_userNickName"
                            android:layout_width="130dp"
                            android:layout_height="25dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#ff222222"
                            android:textSize="@dimen/textFontSize_18"
                            tools:text="昵称" />

                        <ImageView
                            android:id="@+id/iv_authentication"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/person_ic_authentication_have"
                            android:layout_toRightOf="@id/tv_userNickName"
                            android:layout_alignBottom="@id/tv_userNickName"
                            android:visibility="gone"
                            />

                        <TextView
                            android:id="@+id/tv_userId"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:text=""
                            android:textColor="#ffa3a3a3"
                            android:textSize="@dimen/textFontSize_14"
                            android:layout_marginTop="9dip"
                            tools:text="用户ID" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_person_signature"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/personal_signature"
                            android:textColor="#ff222222"
                            android:textSize="@dimen/textFontSize_15" />

                        <TextView
                            android:id="@+id/tv_signatureMake"
                            android:layout_width="wrap_content"
                            android:layout_height="21dp"
                            android:gravity="center"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="定制签名"
                            android:textColor="#858585"
                            android:textSize="@dimen/textFontSize_16"
                            android:maxLength="5"
                            android:ellipsize="end"
                            />

                        <ImageView
                            android:layout_width="8.5dp"
                            android:layout_height="17dp"
                            android:src="@mipmap/uikit_ic_arrow_right" />
                    </LinearLayout>
                </RelativeLayout>


            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ll_person_profile"
                style="@style/PersonMenuListItem">

                <ImageView style="@style/PersonMenuListIcon"
                    android:src="@mipmap/person_ic_profile"
                    />

                <TextView
                    style="@style/PersonMenuListTitle"
                    android:text="我的资料" />

                <TextView
                    android:id="@+id/tv_person_profile_progress"
                    style="@style/PersonMenuListHint"
                    tools:text="15%" />

                <ImageView style="@style/PersonMenuListArrow" />

            </LinearLayout>

            <View style="@style/UikitDivider.Horizontal" />

            <LinearLayout
                android:id="@+id/ll_person_favorite"
                style="@style/PersonMenuListItem">

                <ImageView style="@style/PersonMenuListIcon"
                    android:src="@mipmap/person_ic_favorite"
                    />

                <TextView
                    style="@style/PersonMenuListTitle"
                    android:text="我的收藏" />

                <TextView
                    android:id="@+id/tv_person_favorite_count"
                    style="@style/PersonMenuListHint"
                    tools:text="10篇" />

                <ImageView style="@style/PersonMenuListArrow" />

            </LinearLayout>

            <View
                style="@style/UikitDivider.Horizontal"
                android:layout_height="10dip" />

            <LinearLayout
                android:id="@+id/ll_person_changepwd"
                style="@style/PersonMenuListItem">

                <ImageView style="@style/PersonMenuListIcon"
                    android:src="@mipmap/person_ic_change_pwd"
                    />

                <TextView
                    style="@style/PersonMenuListTitle"
                    android:text="变更密码" />

                <ImageView style="@style/PersonMenuListArrow" />

            </LinearLayout>

            <View
                style="@style/UikitDivider.Horizontal"
                android:layout_height="10dip" />

            <LinearLayout
                android:id="@+id/ll_person_cloud_space"
                style="@style/PersonMenuListItem">

                <ImageView style="@style/PersonMenuListIcon"
                    android:src="@mipmap/person_ic_cloud_space"
                    />

                <TextView
                    style="@style/PersonMenuListTitle"
                    android:text="云存储空间" />

                <TextView
                    android:id="@+id/tv_person_cloud_space"
                    style="@style/PersonMenuListHint"
                    tools:text="1024GB" />

                <ImageView style="@style/PersonMenuListArrow" />

            </LinearLayout>

            <View
                style="@style/UikitDivider.Horizontal"
                android:layout_height="10dip" />

            <LinearLayout
                android:id="@+id/ll_person_helpcenter"
                style="@style/PersonMenuListItem">

                <ImageView style="@style/PersonMenuListIcon"
                    android:src="@mipmap/person_ic_help"
                    />

                <TextView
                    style="@style/PersonMenuListTitle"
                    android:text="帮助与反馈" />

                <TextView
                    android:id="@+id/tv_person_unread"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:textColor="#ffffffff"
                    android:textSize="12dp"
                    android:background="@drawable/person_bg_red_round_circle"
                    android:minWidth="16dip"
                    android:gravity="center"
                    android:layout_marginRight="10dip"
                    tools:text="88" />

                <ImageView style="@style/PersonMenuListArrow" />

            </LinearLayout>

            <View style="@style/UikitDivider.Horizontal" />

            <LinearLayout
                android:id="@+id/ll_person_about"
                style="@style/PersonMenuListItem">

                <ImageView style="@style/PersonMenuListIcon"
                    android:src="@mipmap/person_ic_about"
                    />

                <TextView
                    style="@style/PersonMenuListTitle"
                    android:text="关于我们" />

                <ImageView style="@style/PersonMenuListArrow" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
