<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.hm.iou.uikit.HMTopBarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uikit_topbar_height"
        app:backIcon="@mipmap/uikit_icon_close_black"
        app:bottomDividerIsShow="false"
        app:titleBackground="#ffffff"
        app:titleText="更多设置" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dip"
            android:paddingEnd="20dip"
            android:paddingStart="20dip"
            android:paddingTop="10dip">

            <LinearLayout
                android:id="@+id/ll_set_type_of_add_friend_by_other"
                style="@style/PersonMenuListItem">

                <TextView
                    style="@style/PersonMenuListTitle"
                    android:text="添加方式" />

                <ImageView style="@style/PersonMenuListArrow" />

            </LinearLayout>


            <View style="@style/UikitDivider.Horizontal" />

            <LinearLayout
                android:id="@+id/ll_black_name"
                style="@style/PersonMenuListItem">

                <TextView
                    style="@style/PersonMenuListTitle"
                    android:text="黑名单" />

                <ImageView style="@style/PersonMenuListArrow" />

            </LinearLayout>

            <View
                android:id="@+id/view_divider_black_name"
                style="@style/UikitDivider.Horizontal" />

            <LinearLayout
                android:id="@+id/ll_hide_contract"
                style="@style/PersonMenuListItem">

                <TextView
                    style="@style/PersonMenuListTitle"
                    android:text="隐藏的合同" />

                <ImageView style="@style/PersonMenuListArrow" />

            </LinearLayout>


            <View
                android:id="@+id/view_divider_hide_contract"
                style="@style/UikitDivider.Horizontal" />

            <LinearLayout
                android:id="@+id/ll_more_exit"
                style="@style/PersonMenuListItem">

                <TextView
                    style="@style/PersonMenuListTitle"
                    android:text="退出登陆" />

                <ImageView style="@style/PersonMenuListArrow" />

            </LinearLayout>

            <View style="@style/UikitDivider.Horizontal" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
