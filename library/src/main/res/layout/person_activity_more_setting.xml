<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.hm.iou.uikit.HMTopBarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uikit_topbar_height"
        app:backIcon="@mipmap/uikit_icon_close_black"
        app:bottomDividerIsShow="false"
        app:titleBackground="#ffffff"
        app:titleText="更多设置" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dip"
            android:paddingLeft="6dip"
            android:paddingRight="6dip"
            android:paddingTop="10dip">

            <LinearLayout
                style="@style/PersonMenuCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_more_feedback"
                    style="@style/PersonMenuListItem">

                    <TextView
                        style="@style/PersonMenuListTitle"
                        android:text="资讯反馈" />

                    <com.hm.iou.uikit.ShapedImageView
                        android:id="@+id/iv_profile_avatar"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:layout_marginRight="10dip"
                        app:shape_mode="circle" />

                    <ImageView style="@style/PersonMenuListArrow" />

                </LinearLayout>

                <View style="@style/UikitDivider.Horizontal" />

                <LinearLayout
                    android:id="@+id/ll_more_exit"
                    style="@style/PersonMenuListItem"
                    android:background="@null">

                    <TextView
                        style="@style/PersonMenuListTitle"
                        android:text="安全退出" />

                    <ImageView style="@style/PersonMenuListArrow" />

                </LinearLayout>

                <View style="@style/UikitDivider.Horizontal" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
