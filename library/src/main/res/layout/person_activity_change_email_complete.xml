<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.hm.iou.uikit.HMTopBarView
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uikit_topbar_height"
        app:bottomDividerIsShow="false"
        app:rightText="@string/base_customer_service"
        app:titleBackground="@color/transparent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="绑定新的邮箱"
        android:textColor="#ff222222"
        android:textSize="@dimen/textFontSize_22" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_email_black" />


        <com.hm.iou.uikit.ClearEditText
            android:id="@+id/et_phone"
            style="@style/UikitEditText"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入本人常用的邮箱地址"
            android:maxLines="1"
            android:minHeight="40dip" />

    </LinearLayout>

    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/person_ic_msg" />

        <com.hm.iou.uikit.ClearEditText
            android:id="@+id/et_code"
            style="@style/UikitEditText.CheckCode"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:hint="点击获取6位邮箱验证码" />

        <com.hm.iou.uikit.HMCountDownTextView
            android:id="@+id/tv_getcode"
            style="@style/UikitButton.CheckCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />

    <Button
        android:id="@+id/btn_finishChange"
        style="@style/UikitButton.Bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:text="绑定邮箱"
        android:textSize="@dimen/textFontSize_18" />

</LinearLayout>
