<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_vip_top_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/person_bg_vip_not">

            <com.hm.iou.uikit.HMTopBarView
                android:id="@+id/topbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/uikit_topbar_height"
                app:bottomDividerIsShow="false"
                app:titleBackground="@android:color/transparent"
                app:titleText="VIP会员" />

            <com.hm.iou.uikit.CircleImageView
                android:id="@+id/iv_vip_header"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@id/topbar"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/uikit_icon_header_unknow" />

            <ImageView
                android:id="@+id/iv_vip_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_vip_header"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:src="@mipmap/persion_user_flag_not_vip" />

        </RelativeLayout>

        <com.hm.iou.uikit.HMLoadingView
            android:id="@+id/loading_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_vip_top_container"
            android:layout_marginTop="30dip">

        </com.hm.iou.uikit.HMLoadingView>

        <ViewStub
            android:id="@+id/vs_vip_comm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_vip_top_container"
            android:layout="@layout/person_layout_user_comm_info" />

        <ViewStub
            android:id="@+id/vs_vip_vipuser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_vip_top_container"
            android:layout="@layout/person_layout_user_vip_info" />

    </RelativeLayout>
</ScrollView>