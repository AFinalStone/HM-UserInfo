<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_vip_open_vip"
        android:layout_width="305dip"
        android:layout_height="54dip"
        android:layout_marginTop="30dip"
        android:background="@mipmap/person_btn_open_vip" />

    <TextView
        android:id="@+id/tv_vip_continue_use"
        android:layout_width="305dip"
        android:layout_height="48dip"
        android:layout_marginBottom="30dip"
        android:layout_marginTop="12dip"
        android:background="@drawable/person_bg_vip_continue_use"
        android:gravity="center"
        android:text="继续使用基础版服务"
        android:textColor="@color/uikit_text_sub_content"
        android:textSize="18sp" />

</LinearLayout>