<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.hm.iou.uikit.HMTopBarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uikit_topbar_height"
        app:titleText="身份确认" />

    <com.hm.iou.uikit.ClearEditText
        android:id="@+id/et_phone"
        style="@style/PersonMobile"
        android:hint="当前账户的手机号码" />

    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />

    <com.hm.iou.uikit.ShowHidePasswordEditText
        android:id="@+id/et_password"
        style="@style/PersonPassword"
        android:hint="当前账户的登录密码" />

    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />

    <Button
        android:id="@+id/btn_logout"
        style="@style/UikitHMButton.Large.Main"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="35dip"
        android:layout_marginRight="35dip"
        android:text="退出并注销" />

    <Button
        android:id="@+id/btn_close_account"
        style="@style/UikitButton.Red"
        android:layout_marginTop="10dp"
        android:text="注销并删除数据" />

</LinearLayout>
