<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="124dp"
        android:layout_height="76dp"
        android:background="@drawable/person_ic_coupon_left"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            style="@style/UikitTextView"
            android:singleLine="true"
            android:text="@string/uikit_money"
            android:textColor="#ff575b62"
            android:textSize="38dp" />

        <TextView
            android:id="@+id/tv_desc"
            style="@style/UikitTextView.Auxiliary"
            android:singleLine="true"
            android:text="满10元可用" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="41dp"
        android:layout_height="76dp"
        android:background="@drawable/person_bg_coupon_right_blue"
        android:ems="1"
        android:gravity="center"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:textColor="@color/white"
        android:textDirection="1"
        android:textSize="@dimen/textFontSize_16"
        tools:text="领取" />
</LinearLayout>